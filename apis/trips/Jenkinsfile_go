pipeline {
    agent {
        label 'main'
    }

    environment {
      ImgName = "willido/trips"
      ImgTag = "2.0"
      WorkDir = "apis/trips"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                echo 'Building docker image'
                dir(WorkDir) {
                	sh 'pwd'
                	sh 'sudo docker build -t $ImgName:$ImgTag .'
		}
            }
        }
	stage('Canary') {
	    timeout(time: 10, unit: 'SECONDS') {
 	   	// some block
		input message: 'Can we upload image?', ok: 'Upload'
	    }	
	}
	stage('Upload Docker Image') {
	    steps {
                withCredentials([usernamePassword(credentialsId: 'willido_dockerhub', passwordVariable: 'dockerPwd', usernameVariable: 'dockerUsr')]) {
                    // some block
		    echo 'Dockerhub Login'
                    sh 'sudo docker login -u $dockerUsr -p $dockerPwd'
		    sh "sudo docker push ${ImgName}:${ImgTag}"
                }
            }
	}
    }

	post {
  		always {
    			// One or more steps need to be included within each condition's block.
			cleanWs()
			sh "sudo docker rmi ${ImgName}:${ImgTag}"
  		}	
	}
}
